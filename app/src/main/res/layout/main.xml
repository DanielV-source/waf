<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_dynamic_neutral20"
        android:backgroundTint="@color/material_dynamic_neutral20"
        android:gravity="center|top"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:hyphenationFrequency="normal"
            android:minHeight="56dp"
            app:maxButtonHeight="56dp"
            app:popupTheme="@style/AppTheme">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/main_logoText"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/waf_app_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/startMsgText"
            style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="203dp"
            android:clickable="false"
            android:contextClickable="false"
            android:drawableTint="#FFFFFF"
            android:duplicateParentState="false"
            android:elegantTextHeight="false"
            android:ems="10"
            android:enabled="false"
            android:fadeScrollbars="false"
            android:fadingEdge="none"
            android:filterTouchesWhenObscured="false"
            android:fitsSystemWindows="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:forceHasOverlappingRendering="false"
            android:foregroundTint="@color/white"
            android:gravity="center|center_vertical"
            android:hyphenationFrequency="normal"
            android:includeFontPadding="false"
            android:inputType="text"
            android:isScrollContainer="false"
            android:keepScreenOn="false"
            android:lineSpacingExtra="0sp"
            android:linksClickable="false"
            android:longClickable="false"
            android:nestedScrollingEnabled="false"
            android:outlineProvider="none"
            android:saveEnabled="false"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:scrollHorizontally="false"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:soundEffectsEnabled="false"
            android:text="@string/main_startMsgText"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:textColorHint="#00FFFFFF"
            android:textIsSelectable="false"
            android:translationY="-60dp" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="50dp"
            android:translationY="-60dp" />

        <Button
            android:id="@+id/skip_signin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="50dp"
            android:background="@color/material_dynamic_neutral40"
            android:text="@string/main_skip_signin"
            android:textColor="@color/white"
            android:translationY="-60dp" />
    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>
